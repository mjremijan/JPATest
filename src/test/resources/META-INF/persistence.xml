<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="SNAPSHOTPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <!-- class>org.ferris.generateclient.jpatest.Order</class>
    <class>org.ferris.generateclient.jpatest.OrderItem</class -->    
    <properties>
      <property name="hibernate.connection.username"        value="${ferris.property.test.data.user}"/>
      <property name="hibernate.connection.password"        value="${ferris.property.test.data.pass}"/>
      <property name="hibernate.connection.url"             value="${ferris.property.test.data.url}"/>
      <property name="hibernate.connection.driver_class"    value="${ferris.property.test.data.driver}"/>            
      <property name="hibernate.cache.provider_class"       value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.show_sql"                   value="true"/>
    </properties>
  </persistence-unit>
</persistence>
